{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 80,
  "editor.wrappingIndent": "same",
  "files.autoSave": "onWindowChange",
  "files.autoSaveDelay": 1000,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "eslint.format.enable": true,
  "eslint.validate": ["javascript", "javascriptreact"],
  "files.associations": {
    "*.js": "javascript",
    "*.jsx": "javascriptreact",
    "*.json": "json",
    "*.html": "html"
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.git": true
  },
  "files.exclude": {
    "**/node_modules": true,
    "**/.git": true
  },
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "prettier.semi": true, // Add semicolons automatically
  "prettier.singleQuote": true, // Use single quotes instead of double quotes
  "prettier.printWidth": 80, // Wrap lines automatically at 80 characters
  "prettier.trailingComma": "es5", // Add trailing commas where valid in ES5
  "prettier.arrowParens": "always", // Always include parens in arrow functions
  "prettier.endOfLine": "lf" // Ensure consistent line endings
}
